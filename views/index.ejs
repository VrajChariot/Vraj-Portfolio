    <div class="fixed top-0 left-0 w-full h-full -z-10 overflow-hidden" id="hero-bg-parallax">
        <div class="particles absolute w-full h-full" id="particles"></div>
        <div class="grid-overlay absolute top-0 left-0 w-full h-full bg-grid-pattern bg-grid-size animate-grid-move">
        </div>
    </div>

    <section class="hero h-screen pt-20 flex items-center justify-center text-center relative" id="hero">
        <div class="hero-content z-[2] animate-hero-fade-in">
            <h1
                class="hero-name font-bold mb-4 bg-gradient-to-r from-content to-accent bg-clip-text text-transparent overflow-hidden whitespace-nowrap typewriter-border text-[clamp(3rem,8vw,6rem)] w-0">
                <%= title %>
            </h1>
            <p class="hero-subtitle text-content-secondary mb-4 animate-slide-up-slow text-[clamp(1.2rem,3vw,1.8rem)]">
                Full-Stack Developer | Builder | Visionary</p>
            <p class="hero-tagline text-accent mb-12 animate-slide-up-slower text-[clamp(1rem,2.5vw,1.3rem)]">Turning
                ideas into clean, scalable code.</p>
            <div
                class="cta-buttons flex flex-col md:flex-row gap-8 justify-center items-center animate-slide-up-slowest">
                <a href="#projects"
                    class="cta-btn py-4 px-8 bg-transparent border-2 border-accent text-content rounded-full font-semibold transition-all duration-300 ease-in-out relative overflow-hidden hover:bg-accent hover:text-primary-bg hover:shadow-accent hover:-translate-y-0.5">🚀
                    View Projects</a>
                <a href="https://drive.google.com/file/d/1yvqSQcVy1f7IBtf7w_dmS2eaZxK4yY4f/view?usp=sharing"
                    class="cta-btn py-4 px-8 bg-transparent border-2 border-accent text-content rounded-full font-semibold transition-all duration-300 ease-in-out relative overflow-hidden hover:bg-accent hover:text-primary-bg hover:shadow-accent hover:-translate-y-0.5"
