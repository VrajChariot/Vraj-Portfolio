    <script>
        // Update the toggleMobileMenu function
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobile-menu');
            const body = document.body;

            if (mobileMenu.classList.contains('hidden')) {
                // Open menu
                mobileMenu.classList.remove('hidden');
                setTimeout(() => {
                    mobileMenu.classList.remove('translate-x-full');+
                    mobileMenu.classList.add('translate-x-0');
                }, 10);
                body.style.overflow = 'hidden'; // Prevent background scrolling when menu is open
            } else {
                // Close menu
                mobileMenu.classList.remove('translate-x-0');
                mobileMenu.classList.add('translate-x-full');
                setTimeout(() => {
                    mobileMenu.classList.add('hidden');
                    body.style.overflow = 'auto'; // Restore scrolling when menu is closed
                }, 300);
            }
        }

        // Update click handlers to ensure scroll is restored
        document.querySelectorAll('#mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                toggleMobileMenu();
                document.body.style.overflow = 'auto'; // Ensure scrolling is restored
            });
        });

        // Update resize handler
        window.addEventListener('resize', () => {
            if (window.innerWidth >= 768) {
                const mobileMenu = document.getElementById('mobile-menu');
                mobileMenu.classList.add('hidden', 'translate-x-full');
                mobileMenu.classList.remove('translate-x-0');
                document.body.style.overflow = 'auto'; // Ensure scrolling is restored
            }
        });


        // Create floating particles
        function createParticles() {
            const container = document.getElementById('particles');
            if (!container) return;
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'js-particle animation-delay-var animation-duration-var';

                // Random position
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';

                // Random animation timing
                particle.style.setProperty('--animation-delay', `${Math.random() * 6}s`);
                particle.style.setProperty('--animation-duration', `${Math.random() * 3 + 3}s`);

                container.appendChild(particle);
            }
        }

        // Add cursor particle interaction
        function initCursorInteraction() {
            const container = document.getElementById('particles');
            const particles = document.getElementsByClassName('js-particle');
            let mouseX = 0;
            let mouseY = 0;
            let cursorTimeout;

            document.addEventListener('mousemove', (e) => {
                mouseX = e.clientX;
                mouseY = e.clientY;

                // Create techno grid effect around cursor
                if (!cursorTimeout) {
                    cursorTimeout = setTimeout(() => {
                        // Main ripple
                        const ripple = document.createElement('div');
                        ripple.className = 'cursor-ripple';
                        ripple.style.left = `${mouseX}px`;
                        ripple.style.top = `${mouseY}px`;

                        // Tech decorations
                        for (let i = 0; i < 4; i++) {
                            const line = document.createElement('div');
                            line.className = 'tech-line';
                            line.style.setProperty('--rotation', `${i * 90}deg`);
                            ripple.appendChild(line);
                        }

                        // Data points
                        const dataPoint = document.createElement('div');
                        dataPoint.className = 'data-point';
                        dataPoint.textContent = `${Math.round(Math.random() * 999)}`;
                        ripple.appendChild(dataPoint);

                        container.appendChild(ripple);
                        setTimeout(() => ripple.remove(), 800);
                        cursorTimeout = null;
                    }, 50);
                }

                // Particle interaction with data stream effect
                Array.from(particles).forEach((particle, index) => {
                    const rect = particle.getBoundingClientRect();
                    const centerX = rect.left + rect.width / 2;
                    const centerY = rect.top + rect.height / 2;

                    const distance = Math.hypot(mouseX - centerX, mouseY - centerY);
                    const maxDistance = 120;

                    if (distance < maxDistance) {
                        const angle = Math.atan2(mouseY - centerY, mouseX - centerX);
                        const force = (1 - distance / maxDistance) * 8;
                        const delay = distance * 0.5; // Progressive delay based on distance

                        particle.style.transform = `translate(
          ${Math.cos(angle) * force}px, 
          ${Math.sin(angle) * force}px
        ) scale(${1 + force / 50})`;

                        particle.style.transition = `transform 0.4s cubic-bezier(0.2, 0.9, 0.3, 1) ${delay}ms`;
                        particle.style.backgroundColor = '#00ff84';
                        particle.style.boxShadow = '0 0 10px rgba(0, 255, 132, 0.5)';
                    } else {
                        particle.style.transform = '';
                        particle.style.backgroundColor = '';
                        particle.style.boxShadow = '';
                    }
                });
            });
        }

        // Smooth scrolling for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Form submission
        function submitForm(event) {
            event.preventDefault();
            const form = event.target;
            const submitBtn = event.target.querySelector('.submit-btn');
            const originalText = submitBtn.textContent;

            submitBtn.textContent = 'Sending...';
            submitBtn.disabled = true;

            setTimeout(() => {
                submitBtn.textContent = originalText;
                submitBtn.disabled = false;

                const toast = document.getElementById('toast');
                toast.classList.add('translate-x-0'); // Show (Tailwind way)
                toast.classList.remove('translate-x-[400px]');


                setTimeout(() => {
                    toast.classList.remove('translate-x-0');
                    toast.classList.add('translate-x-[400px]'); // Hide
                }, 3000);

                event.target.reset();
            }, 2000);
            form.submit();
        }

        // Resume download (Simplified toast interaction)
        function downloadResume() {
            const toast = document.getElementById('toast');
            toast.textContent = 'Resume download started! 📄';
            toast.classList.add('translate-x-0');
            toast.classList.remove('translate-x-[400px]');

            setTimeout(() => {
                toast.classList.remove('translate-x-0');
                toast.classList.add('translate-x-[400px]');
                toast.textContent = 'Message sent successfully! 🚀'; // Reset text
            }, 3000);
        }

        // Intersection Observer for section fade-in animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px' // Unchanged
        };

        const sectionObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.remove('opacity-0');
                    entry.target.classList.add('opacity-100');
                    // entry.target.style.transform = 'translateY(0)'; // Already handled by animation 'to' state
                    sectionObserver.unobserve(entry.target); // Optional: stop observing once animated
                }
            });
        }, observerOptions);

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            createParticles();
            initCursorInteraction();
            document.querySelectorAll('.section.opacity-0').forEach(section => { // Target only initially hidden sections
                sectionObserver.observe(section);
            });
        });

        // Parallax effect for hero background
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            const rate = scrolled * -0.5; // Keep this effect, adjust rate if needed
            const heroBackground = document.getElementById('hero-bg-parallax'); // Use ID for direct selection
            if (heroBackground) {
                heroBackground.style.transform = `translateY(${rate}px)`;
            }
        });
    </script>
