            class="section-title font-bold text-center mb-12 bg-gradient-to-r from-content to-accent bg-clip-text text-transparent text-[clamp(2.5rem,5vw,3.5rem)]">
            Featured Projects</h2>
            <div class="projects-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[repeat(auto-fit,minmax(430px,1fr))] gap-6">
            <!-- <div class="projects-grid grid grid-rows-1 gap-6 overflow-x-scroll scrollbar-hide"> -->
                <% if (typeof projects !== 'undefined' && projects.length > 0) { %>
                    <% projects.forEach(function(project) { %>
                        <div class="project-card group bg-gradient-to-br from-glass-bg to-[rgba(255,255,255,0.02)] backdrop-blur-xl border border-glass-border rounded-3xl flex flex-col transition-all duration-500 ease-[cubic-bezier(0.4,0,0.2,1)] cursor-pointer overflow-hidden relative shadow-project-card touch-pan-y md:hover:-translate-y-4 md:hover:rotate-[3deg] md:hover:shadow-project-card-hover md:hover:border-accent/[0.4] before:content-[''] before:absolute before:top-0 before:left-0 before:right-0 before:h-1 before:bg-gradient-to-r before:from-accent before:to-accent-darker before:opacity-0 md:group-hover:before:opacity-100 before:transition-opacity before:duration-300 before:ease-in-out">
                            <div class="project-header p-6 sm:p-8 border-b border-white/[0.05] flex flex-col gap-4">
                                <h3 class="project-title text-2xl font-bold text-accent flex items-center gap-2">
                                    <span class="text-xs opacity-70">▶</span>
                                    <%= project.title %>
                                </h3>
                                <p class="project-desc text-content-secondary leading-relaxed text-base">
                                    <%= project.ProjectDesc %>
                                </p>
                            </div>
                            <div class="project-tags project-body px-5 sm:px-6 py-4 flex flex-wrap md:flex-nowrap gap-2 md:gap-3 overflow-x-auto md:overflow-visible scrollbar-hide">
                                <% project.techStack.forEach(function(tech) { %>
                                    <span class="project-tag flex justify-center items-center relative min-w-[70px] overflow-hidden py-2 px-4 bg-accent/[0.08] border border-accent/[0.2] rounded-full text-xs text-accent font-medium transition-all duration-300 ease-in-out hover:bg-accent/[0.15] hover:border-accent/[0.4] hover: project-card-shine">
                                        <%= tech %>
                                    </span>
                                <% }); %>
